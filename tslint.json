{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": true,
        "class-name": true,
        "eofline": false,
        "indent": [
            true,
            "tabs",
            2
        ],
        "max-classes-per-file": [
            true,
            1
        ],
        "new-parens": true,
        "no-empty": false,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "object-literal-sort-keys": [
            true,
            "match-declaration-order"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ]
    },
    "rulesDirectory": []
}
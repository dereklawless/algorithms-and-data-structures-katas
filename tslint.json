{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": true,
        "class-name": true,
        "eofline": false,
        "indent": [
            true,
            "tabs",
            2
        ],
        "max-classes-per-file": [
            true,
            1
        ],
        "new-parens": true,
        "no-empty": false,
        "no-trailing-whitespace": true,
        "no-var-keyword": true,
        "object-literal-sort-keys": [
            true,
            "match-declaration-order"
        ],
        "prefer-for-of": false,
        "quotemark": [
            true,
            "double"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": {
            "options": [
                "allow-leading-underscore"
            ]
        }
    },
    "rulesDirectory": []
}